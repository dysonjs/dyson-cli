{
  "name": "dyson-cli",
  "private": true,
  "description": "Next Generation Build Tool for development",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "add": "tsx ./scripts/add.ts",
    "build": "pnpm -r --parallel run build",
    "build-dts": "pnpm -r --parallel run build-dts",
    "clean": "pnpm -r --parallel run clean",
    "type-check": "pnpm -r --parallel run type-check",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache .",
    "test": "pnpm -r --parallel run test",
    "release": "pnpm changeset publish",
    "changelog": "pnpm changeset"
  },
  "license": "MIT",
  "keywords": [],
  "author": "yuanhongboo@gmail.com",
  "engines": {
    "node": ">=16.20",
    "pnpm": ">=8.12"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "cross-env NODE_ENV='production' eslint --fix"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@rollup/plugin-json": "6.1.0",
    "@types/fs-extra": "11.0.4",
    "@types/inquirer": "9.0.7",
    "@types/lodash": "4.14.202",
    "@types/minimist": "1.2.5",
    "@types/node": "20.11.5",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.18.1",
    "cross-env": "7.0.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "execa": "8.0.1",
    "fast-glob": "3.3.2",
    "fs-extra": "11.2.0",
    "handlebars": "4.7.8",
    "inquirer": "9.2.12",
    "lint-staged": "15.2.0",
    "lodash": "4.17.21",
    "minimist": "1.2.8",
    "prettier": "3.2.1",
    "rimraf": "5.0.5",
    "rollup": "4.9.6",
    "rollup-plugin-copy": "3.5.0",
    "rollup-plugin-dts": "6.1.0",
    "rollup-plugin-esbuild": "6.1.1",
    "rollup-plugin-extensions": "0.1.0",
    "simple-git-hooks": "2.9.0",
    "tsx": "4.7.0",
    "typescript": "5.3.3",
    "yaml": "2.3.4"
  }
}
